<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_blue"
    android:padding="16dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/emergency_first_aid_title"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:fontFamily="@font/aclonica"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/emergencyCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_marginTop="24dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/emergency_call"
                android:textColor="@color/red"
                android:textSize="18sp"
                android:drawableLeft="@drawable/icon_ambulance"
                android:drawablePadding="8dp"
                android:fontFamily="@font/aclonica"/>

            <TextView
                android:id="@+id/emergencyNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/emergency_number"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:fontFamily="@font/aclonica"
                android:layout_marginTop="8dp"
                android:autoLink="phone"
                android:linksClickable="true"
                android:clickable="true"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnNearestHospital"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/find_nearest_hospital"
        android:drawableLeft="@drawable/icon_location"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:fontFamily="@font/aclonica"
        app:layout_constraintTop_toBottomOf="@id/emergencyCard"
        android:layout_marginTop="16dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/instructionsCard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/btnNearestHospital"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="#40FFFFFF"
        app:cardCornerRadius="12dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/first_aid_instructions_title"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:fontFamily="@font/aclonica"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/first_aid_steps"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:lineSpacingExtra="4sp"
                    android:fontFamily="@font/aclonica"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/common_emergencies"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:fontFamily="@font/aclonica"
                    android:layout_marginTop="16dp"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/heart_attack"
                    android:drawableLeft="@drawable/icon_heart_cardiogram"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black"
                    android:fontFamily="@font/aclonica"
                    android:layout_marginTop="8dp"/>

<!--                <Button-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="@string/choking"-->
<!--                    android:textColor="@color/black"-->
<!--                    android:fontFamily="@font/aclonica"-->
<!--                    android:drawableLeft="@drawable/icon_doctor_nurse"-->
<!--                    android:backgroundTint="@color/white"-->
<!--                    android:layout_marginTop="8dp"/>-->
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>